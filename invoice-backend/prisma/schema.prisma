generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CLIENT
  ADMIN
}

model User {
  id                 String    @id @default(cuid())
  name               String
  email              String    @unique
  role               Role      @default(CLIENT)
  invoices           Invoice[] @relation("UserInvoices")
  createdByInvoices  Invoice[] @relation("CreatedByUser")
  modifiedByInvoices Invoice[] @relation("ModifiedByUser")
}

model Invoice {
  id           String    @id @default(cuid())
  number       Int       @unique
  userId       String
  user         User      @relation(fields: [userId], references: [id], name: "UserInvoices")
  products     Product[]
  total        Float
  dueDate      DateTime
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  createdById  String
  createdBy    User      @relation(fields: [createdById], references: [id], name: "CreatedByUser")
  modifiedById String
  modifiedBy   User      @relation(fields: [modifiedById], references: [id], name: "ModifiedByUser")
  status       String
}

model Product {
  id        String  @id @default(cuid())
  name      String
  price     Float
  invoice   Invoice @relation(fields: [invoiceId], references: [id])
  invoiceId String
}
